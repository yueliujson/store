<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.easy.dao.ProductKindDao">
    <insert id="save">
        insert into productkind(name, info,<if test="parent_id!=null">parent_id,</if>createtime, creator, lastedittime)
        values (#{name}, #{info},<if test="parent_id!=null">#{parent_id},</if>  now(), #{creator}, now())
    </insert>

    <update id="edit">
        update productkind
        set
        <if test="name!=null">
            name=#{name},
        </if>
        <if test="info!=null">
            info=#{info},
        </if>
        <if test="state!=null">
            state=#{state},
        </if>
        <if test="isDel!=null">
            isdel=#{isDel},
        </if>
        lastedittime=now()
        where id = #{id}
    </update>
    <update id="delete">
        update productkind
        set isdel=1,
            state=0
        where id = #{id}
    </update>
    <update id="deleteChild">
        update product set isdel=1 where type_id=#{id}
    </update>

    <resultMap id="getChild" type="com.easy.bean.ProductKind">
        <result column="id" property="id"/>
        <result column="isDel" property="isDel"/>
        <collection property="productKind" select="child" column="{id=id,isDel=isDel}"/>
    </resultMap>

    <select id="get" resultMap="getChild">
        select id,
               name,
               info,
               parent_id,
               state,
               createtime,
               creator,
               lastedittime,
               isdel
        from productkind
        where id = #{id}
    </select>

    <select id="child" resultType="com.easy.bean.ProductKind">
        select id,
               name,
               info,
               parent_id,
               state,
               createtime,
               creator,
               lastedittime,
               isdel
        from productkind
        where parent_id = #{id}
          and isdel = #{isDel}
        order by state desc
    </select>

    <select id="list" resultMap="getChild">
        select
        id,
        name,
        info,
        parent_id,
        state,
        createtime,
        creator,
        lastedittime,
        isdel
        from productkind
        <where>
            parent_id=0
            <choose>
                <when test="item.id!=null">
                    id=#{item.id}
                </when>
                <otherwise>
                    <trim prefix="and">
                        <if test="item.name!=null and item.name!=''">
                            <bind name="likeName" value="'%'+item.name+'%'"/>
                            name like #{likeName}
                        </if>
                    </trim>
                    <trim prefix="and">
                        <if test="item.isDel!=null">
                            isdel=#{item.isDel}
                        </if>
                    </trim>
                </otherwise>
            </choose>
        </where>
        <if test="page.limit !=0 ">
            limit #{page.start},#{page.limit}
        </if>
    </select>

    <select id="getChildList" resultType="com.easy.bean.ProductKind">
        select id,
        name,
        info,
        parent_id,
        state,
        createtime,
        creator,
        lastedittime,
        isdel
        from productkind
        where parent_id = #{id} and isdel=0
        <if test="page.limit !=0 ">
            limit #{page.start},#{page.limit}
        </if>
    </select>

    <select id="count" resultType="java.lang.Integer">
        select count(*)
        from productkind
        <where>
            parent_id=0
            <choose>
                <when test="id!=null">
                    id=#{item.id}
                </when>
                <otherwise>
                    <if test="name!=null and name!=''">
                        <bind name="likeName" value="'%'+name+'%'"/>
                        name like #{likeName}
                    </if>
                    <trim prefix="and">
                        <if test="isDel!=null">
                            isdel=#{isDel}
                        </if>
                    </trim>
                </otherwise>
            </choose>
        </where>
    </select>


